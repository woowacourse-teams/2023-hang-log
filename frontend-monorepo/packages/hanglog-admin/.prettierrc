{
  "endOfLine": "auto",
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 100,
  "semi": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@/(.*)$",
    "^@components/(.*)$",
    "^@type/(.*)$",
    "^@hooks/(.*)$",
    "^@pages/(.*)$",
    "^@styles/(.*)$",
    "^@constants/(.*)$",
    "^@assets/(.*)$",
    "^@utils/(.*)$",
    "^@api/(.*)$",
    "^@mocks/(.*)$",
    "^@stories/(.*)$",
    "^@router/(.*)$",
    "^@store/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
